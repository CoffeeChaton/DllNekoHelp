{
    "excludes": [
        "**/data",
        "**/dist",
        "**/node_modules",
        "**/.vscode-test"
    ],
    "includes": [
        "**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml}"
    ],
    "incremental": true,
    "indentWidth": 4,
    "lineWidth": 120,
    "newLineKind": "crlf",
    "plugins": [
        "https://plugins.dprint.dev/dockerfile-0.3.0.wasm",
        "https://plugins.dprint.dev/json-0.19.2.wasm",
        "https://plugins.dprint.dev/markdown-0.17.0.wasm",
        "https://plugins.dprint.dev/toml-0.6.1.wasm",
        "https://plugins.dprint.dev/typescript-0.90.5.wasm"
    ],
    "typescript": {
        "binaryExpression.operatorPosition": "nextLine",
        "importDeclaration.preferSingleLine": false,
        "quoteStyle": "alwaysSingle",
        "semiColons": "prefer",
        "typeLiteral.separatorKind.multiLine": "comma",
        "typeLiteral.separatorKind.singleLine": "comma"
    }
}
